{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GLSL",
	"injectionSelector": "R:text.html",
	"patterns": [
		{
			"begin": "(?<=<script.*?type=\"x-shader\/x-(vertex|fragment)\".*?>)",
			"end": "(?=</script>)",
			"patterns": [
				{
					"include": "source.glsl"
				}
			]
		}
	],
	"scopeName": "source.injected.glsl"
}